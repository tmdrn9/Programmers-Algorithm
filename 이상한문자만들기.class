class Solution {
    public String solution(String s) {
        int k=0;
        String answer = "";
        for(int i=0;i<s.length();i++){
            char ch=s.charAt(i);
            if(ch==' '){
                answer+=ch;
                k=0;
                continue;
            }
            if(k%2==0)
                answer+=Character.toUpperCase(ch);
            else
                answer+=Character.toLowerCase(ch);
            k++;   
        }
        return s.toUpperCase();
    }
}